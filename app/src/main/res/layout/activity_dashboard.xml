<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4C2C1"
    tools:context=".activity_dashboard">

    <ImageView
        android:id="@+id/MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_buy_bike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="130dp"
            android:background="#0FFFFFFF"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="buy bike"
            android:textColor="#F53163" />

        <Button
            android:id="@+id/btn_buy_bike_parts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#0FFFFFFF"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="buy bike parts"
            android:textColor="#F53163" />

        <Button
            android:id="@+id/btn_rent_bike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="130dp"
            android:background="#0FFFFFFF"
            android:gravity="center"
            android:text="rent bike"
            android:textColor="#F53163" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>